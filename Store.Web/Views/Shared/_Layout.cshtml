<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    @Script("modernizr-2.5.3.js")
</head>

<body>
    <header>
        <div class="content-wrapper clear-fix">
            <div class="float-left">
                <p class="site-title">@Html.ActionLink("Store Application", "Index", "Home")</p>
            </div>
            <div class="float-right">
            @RenderSection("accountlist", required: false)                
            </div>
        </div>
    </header>
    <section id="main">
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </section>
    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year - Store Application</p>
            </div>
        </div>
    </footer>
</body>
@Script("jquery-1.8.0.min.js")
@Script("jquery.unobtrusive-ajax.min.js")
@RenderSection("scripts", required: false)
</html>
@helper Script(string scriptName)
{
    <script src="@Url.Content("~/Scripts/" + scriptName)" type="text/javascript"></script>
}
